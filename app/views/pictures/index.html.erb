<%= link_to "New lint", new_picture_path %>

<% @pictures.each do |picture| %>
  <div class="post-container">
    <p class="post-title">Posted by <strong><%= picture.user.email %></strong></p>
    <a href="<%= picture_path(picture) %>" id="image-<%= picture.id %>">
      <div class="image-wrapper">
        <img src="<%= picture.url %>" class="image">
        <p class="image-text">Show comments</p>
      </div>
    </a>
  </div>
<% end %>
